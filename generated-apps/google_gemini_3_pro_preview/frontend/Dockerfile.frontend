FROM node:22-alpine
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

# ARGs must be declared to receive them from docker-compose build args
ARG VITE_SUPABASE_PROJECT_URL
ARG VITE_SUPABASE_ANON_KEY

# Set ENV vars from ARGs so build process sees them
ENV VITE_SUPABASE_PROJECT_URL=$VITE_SUPABASE_PROJECT_URL
ENV VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY

RUN npm run build
EXPOSE 4173
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "4173"]
