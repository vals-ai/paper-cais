FROM node:22-alpine

WORKDIR /app

# Accept build arguments
ARG SUPABASE_PROJECT_URL
ARG SUPABASE_ANON_KEY

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Create env file with Supabase config
RUN echo "VITE_SUPABASE_URL=${SUPABASE_PROJECT_URL}" > .env.production && \
    echo "VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}" >> .env.production && \
    cat .env.production

# Build the app
RUN npm run build

# Expose port
EXPOSE 4173

# Run preview server
CMD ["npm", "run", "preview"]
